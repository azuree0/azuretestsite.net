@{
    ViewData["Title"] = "Contact";
}

<section class="section" style="padding-top: 6rem;">
    <div class="container">
        <h2 class="section-title">Contact</h2>
        <p class="text-center mb-5" style="font-size: 1.2rem; color: var(--text-secondary);">
            Connect with us to explore the future of digital architecture
        </p>

        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="arch-card">
                    <h3 class="text-cyan mb-4">Get In Touch</h3>
                    <form>
                        <div class="mb-4">
                            <label for="name" class="form-label" style="color: var(--primary-cyan); font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">Name</label>
                            <input type="text" class="form-control sci-fi-input" id="name" placeholder="Enter your name" required>
                        </div>
                        <div class="mb-4">
                            <label for="email" class="form-label" style="color: var(--primary-cyan); font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">Email</label>
                            <input type="email" class="form-control sci-fi-input" id="email" placeholder="your.email@example.com" required>
                        </div>
                        <div class="mb-4">
                            <label for="subject" class="form-label" style="color: var(--primary-cyan); font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">Subject</label>
                            <input type="text" class="form-control sci-fi-input" id="subject" placeholder="What's this about?" required>
                        </div>
                        <div class="mb-4">
                            <label for="message" class="form-label" style="color: var(--primary-cyan); font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">Message</label>
                            <textarea class="form-control sci-fi-input" id="message" rows="5" placeholder="Your message..." required></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn-sci-fi">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

<style>
    .sci-fi-input {
        background: rgba(10, 14, 39, 0.8);
        border: 1px solid var(--primary-cyan);
        color: var(--text-primary);
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }

    .sci-fi-input:focus {
        background: rgba(10, 14, 39, 0.95);
        border-color: var(--primary-purple);
        box-shadow: 0 0 15px rgba(0, 240, 255, 0.3);
        outline: none;
        color: var(--text-primary);
    }

    .sci-fi-input::placeholder {
        color: var(--text-secondary);
        opacity: 0.6;
    }
</style>

