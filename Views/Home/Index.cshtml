@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="hero-content">
        <p class="hero-subtitle">Future Architecture</p>
        <h1>AZURE</h1>
        <p>Where Science Fiction meets Architectural Design<br>
        Exploring the boundaries of digital space and structural innovation</p>
        <a href="#about" class="btn-sci-fi">Explore</a>
    </div>
</div>

<section id="about" class="section">
    <div class="container">
        <h2 class="section-title">About</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="arch-card">
                    <h3>Vision</h3>
                    <p>
                        The convergence of science fiction aesthetics and architectural principles. 
                        We design digital experiences that push the boundaries of what's possible, creating spaces 
                        that feel both futuristic and grounded in structural integrity.
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="arch-card">
                    <h3>Mission</h3>
                    <p>
                        To bridge the gap between imaginative design and functional architecture. 
                        Every project is a journey into uncharted territories of digital space, where form follows 
                        function.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="features" class="section">
    <div class="container">
        <h2 class="section-title">Core Principles</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="arch-card">
                    <h3 class="text-cyan">Innovation</h3>
                    <p>
                        Pushing the boundaries of design with cutting-edge technologies and 
                        forward-thinking architectural concepts.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="arch-card">
                    <h3 class="text-cyan">Structure</h3>
                    <p>
                        Every design is built on solid architectural foundations, ensuring 
                        both aesthetic appeal and functional excellence.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="arch-card">
                    <h3 class="text-cyan">Futurism</h3>
                    <p>
                        Embracing science fiction aesthetics to create experiences that 
                        feel like glimpses into tomorrow's digital landscape.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

