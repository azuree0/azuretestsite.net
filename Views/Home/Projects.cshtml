@{
    ViewData["Title"] = "Projects";
}

<section class="section" style="padding-top: 6rem;">
    <div class="container">
        <h2 class="section-title">Projects</h2>
        <p class="text-center mb-5" style="font-size: 1.2rem; color: var(--text-secondary);">
            Exploring the architecture of digital space through innovative projects
        </p>

        <div class="row">
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="arch-card">
                    <h3 class="text-cyan">Architectural Grid</h3>
                    <p>
                        A responsive layout system inspired by architectural blueprints, providing 
                        structure and flexibility for complex digital spaces.
                    </p>
                    <div class="mt-3">
                        <span class="badge" style="background: var(--primary-cyan); color: var(--darker-bg); padding: 0.5rem 1rem;">Layout</span>
                        <span class="badge" style="background: var(--primary-purple); color: white; padding: 0.5rem 1rem; margin-left: 0.5rem;">Grid</span>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="arch-card">
                    <h3 class="text-cyan">Future Portal</h3>
                    <p>
                        An immersive navigation system that creates seamless transitions between 
                        different sections of digital architecture, enhancing user flow.
                    </p>
                    <div class="mt-3">
                        <span class="badge" style="background: var(--primary-cyan); color: var(--darker-bg); padding: 0.5rem 1rem;">Navigation</span>
                        <span class="badge" style="background: var(--primary-purple); color: white; padding: 0.5rem 1rem; margin-left: 0.5rem;">UX</span>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="arch-card">
                    <h3 class="text-cyan">Digital Construct</h3>
                    <p>
                        A modular component library that allows rapid prototyping of sci-fi inspired 
                        interfaces while maintaining architectural integrity and usability.
                    </p>
                    <div class="mt-3">
                        <span class="badge" style="background: var(--primary-cyan); color: var(--darker-bg); padding: 0.5rem 1rem;">Components</span>
                        <span class="badge" style="background: var(--primary-purple); color: white; padding: 0.5rem 1rem; margin-left: 0.5rem;">Library</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

